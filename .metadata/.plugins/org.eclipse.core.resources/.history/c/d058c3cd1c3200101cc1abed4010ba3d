package jp.co.notebook.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import jp.co.notebook.entity.Note;
import jp.co.notebook.entity.User;
import jp.co.notebook.repository.NoteRepository;

@Service
public class NoteService {
	@Autowired
	NoteRepository noteRepository;

	public List<Note> handleFindByUserOrderByIdMax6(User user) {
		List<Note> list = this.noteRepository.findByUserOrderById(user);
		return this.noteRepository.findByUserOrderById(user);
	}

	public void handleSaveNote(Note note) {
		this.noteRepository.save(note);
	}
}
